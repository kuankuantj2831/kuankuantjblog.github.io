                        <div class="showcase-meta">
                            <span>🎮 游戏</span>
                            <span>👁️ 856</span>
                        </div>
                    </div>
                </div>

                <!-- 资源卡片 3 -->
                <div class="showcase-card">
                    <img src="/css/images/banner.jpg" alt="资源3" class="showcase-image">
                    <div class="showcase-info">
                        <div class="showcase-title">前端开发工具包</div>
                        <div class="showcase-meta">
                            <span>🔧 工具</span>
                            <span>👁️ 2.3k</span>
                        </div>
                    </div>
                </div>

                <!-- 资源卡片 4 -->
                <div class="showcase-card">
                    <img src="/images/ocean/ocean.png" alt="资源4" class="showcase-image">
                    <div class="showcase-info">
                        <div class="showcase-title">Python学习路线</div>
                        <div class="showcase-meta">
                            <span>📚 学习</span>
