                        <option>学习资料</option>
                    </select>
                    <input type="text" class="search-input" placeholder="开启精彩搜索...">
                    <button class="search-btn">🔍</button>
                </div>
            </div>

            <!-- 分类标签 -->
            <div class="category-tags">
                <a href="#" class="category-tag">陪神</a>
                <a href="#" class="category-tag">哔哩哔哩</a>
                <a href="#" class="category-tag">游戏R3</a>
                <a href="#" class="category-tag">期刊</a>
                <a href="#" class="category-tag">丝袜</a>
                <a href="#" class="category-tag">百度网盘</a>
            </div>
